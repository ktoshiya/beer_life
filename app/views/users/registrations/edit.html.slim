- provide(:title, "プロフィール編集") 
h1.center = yield(:title)

.p-3.col-md-6.offset-md-3
  ul.nav.nav-tabs
    li.nav-item
      a.nav-link.active[href="#tab1" data-toggle="tab"] プロフィール編集
    li.nav-item
      a.nav-link[href="#tab2" data-toggle="tab"] パスワード変更

.tab-content
  #tab1.tab-pane.active
    = render 'user_edit'
  #tab2.tab-pane
    = render 'password_edit'

javascript:
  $('#image').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 3) {
      alert('Maximum file size is 3MB. Please choose a smaller file.');
    }
  });

  $(function() {
    function readURL(input) {
      if (input.files && input.files[0]) {
        var reader = new FileReader();
        reader.onload = function (e) {
          $('#img_prev').attr('src', e.target.result);
        }
        reader.readAsDataURL(input.files[0]);
      }
    }
    $("#image").change(function(){
      readURL(this);
    });
  });